pipeline {
    agent any
 
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yourusername/yourrepository.git'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t myapp .'
            }
        }
        stage('Test') {
            steps {
                // Add your testing commands here
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d --name myapp-container myapp'
            }
        }
    }
}
